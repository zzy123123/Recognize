<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/common_ten_dp"
    android:layout_marginRight="@dimen/common_ten_dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/common_five_dp"
        android:layout_marginTop="@dimen/common_ten_dp"
        android:layout_marginBottom="@dimen/common_ten_dp"
        android:text="sdd"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/common_ten_dp"
        android:layout_marginTop="@dimen/common_ten_dp"
        android:layout_marginRight="@dimen/common_five_dp"
        android:layout_marginBottom="@dimen/common_ten_dp"
        android:text="faf"
        android:textColor="#666666"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_ten_dp"
        android:layout_marginTop="@dimen/common_ten_dp"
        android:layout_marginRight="@dimen/common_five_dp"
        android:layout_marginBottom="@dimen/common_ten_dp"
        android:text="dsd"
        android:textColor="#999999"
        android:textSize="12sp" />
</LinearLayout>